{
  "editor.insertSpaces": true,
  "editor.tabSize": 2,
  "[json,jsonc,typescript,javascript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "editor.codeActionsOnSave": {
    "source.biome": "always",
    "source.organizeImports.biome": "always",
    "source.fixAll.biome": "always"
  }
}
