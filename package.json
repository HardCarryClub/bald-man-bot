{
  "name": "bald-man-bot",
  "version": "2.4.0",
  "private": true,
  "scripts": {
    "dev": "bun run --bun bot:generate && bun run --bun start",
    "start": "bun run --bun app/index.ts",
    "bot:generate": "bun run --bun dressed build -R bot",
    "bot:register-commands": "bun run --bun dressed build -r -R bot && bun run --bun .dressed",
    "generate": "drizzle-kit generate",
    "migrate": "bun run --bun app/db/migrate.ts"
  },
  "dependencies": {
    "await-to-js": "^3.0.0",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "discord-api-types": "^0.38.16",
    "discord-fmt": "^1.0.1",
    "dressed": "1.9.0-canary.3",
    "drizzle-orm": "^0.44.3",
    "pino": "^9.7.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.2",
    "@types/bun": "^1.2.19",
    "drizzle-kit": "^0.31.4",
    "lefthook": "^1.12.2",
    "pino-pretty": "^13.0.0",
    "tsx": "^4.20.3"
  },
  "trustedDependencies": [
    "esbuild",
    "lefthook"
  ]
}
